<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.rezyfr.submission3">
    <permission android:name="com.rezyfr.submission3.READ_DATABASE" android:protectionLevel="normal"/>
    <permission android:name="com.rezyfr.submission3.WRITE_DATABASE" android:protectionLevel="normal"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".SubmissionApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Submission3">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.rezyfr.submission3.data.database.provider.FavoriteContentProvider"
            android:authorities="com.rezyfr.submission3"
            android:exported="true"
            android:readPermission="com.rezyfr.submission3.READ_DATABASE"
            android:writePermission="com.rezyfr.submission3.WRITE_DATABASE"
            tools:ignore="Instantiatable" />
    </application>

</manifest>